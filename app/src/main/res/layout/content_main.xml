<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="#026b7e"
    android:paddingTop="70dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card0"
        card_view:cardElevation="4dp"
        android:background="#80f3fff4"
        android:alpha="0.9">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/youtube_0_icon"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp"
                android:src="@drawable/youtube"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/song_0_title"
                android:layout_toRightOf="@+id/youtube_0_icon"
                android:layout_alignParentTop="true"
                android:textSize="30sp"
                android:text="Song Title" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/song_0_artist"
                android:layout_toRightOf="@+id/youtube_0_icon"
                android:layout_below="@+id/song_0_title"
                android:text="Song Artist" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card1"
        card_view:cardElevation="4dp"
        android:background="#80f3fff4"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:alpha="0.9"
        android:layout_below="@+id/card0">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/spotify_1_icon"
                android:layout_alignParentLeft="false"
                android:layout_alignParentTop="true"
                android:src="@drawable/spotify"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/song_1_title"
                android:layout_alignParentTop="true"
                android:textSize="30sp"
                android:text="Song Title" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/song_1_artist"
                android:layout_below="@+id/song_1_title"
                android:text="Song Artist" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card2"
        card_view:cardElevation="4dp"
        android:background="#80f3fff4"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:alpha="0.9"
        android:layout_below="@+id/card1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/soundcloud_1_icon"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp"
                android:src="@drawable/soundcloud"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/song_2_title"
                android:layout_toRightOf="@+id/soundcloud_1_icon"
                android:layout_alignParentTop="true"
                android:textSize="30sp"
                android:text="Song Title" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/song_2_artist"
                android:layout_toRightOf="@+id/soundcloud_1_icon"
                android:layout_below="@+id/song_2_title"
                android:text="Song Artist" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>
