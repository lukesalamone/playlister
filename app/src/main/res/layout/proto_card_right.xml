<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/protoRight"
    card_view:cardElevation="4dp"
    android:background="#80f3fff4"
    android:layout_marginTop="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/protoIconRight"
            android:layout_alignParentLeft="false"
            android:layout_alignParentTop="true"
            android:src="@drawable/spotify"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/protoTitleRight"
            android:layout_alignParentTop="true"
            android:textSize="16sp"
            android:textColor="#000000"
            android:text="Song Title" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/protoArtistRight"
            android:layout_below="@+id/protoTitleRight"
            android:textSize="12sp"
            android:textColor="#000000"
            android:text="Song Artist" />
    </RelativeLayout>

</android.support.v7.widget.CardView>